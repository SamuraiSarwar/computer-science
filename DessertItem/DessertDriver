    public class DessertDriver{
    public static void main(String[] agrs)
            {
        int menu=0;
        String name;
        Util.sopl("Weclome to the Candy Store");
        name = Util.getS("What is your name?");
        
        do 
        {
            Util.sopl("1. Cookie");
            Util.sopl("2. Cookie");
            Util.sopl("3. Cookie");
            Util.sopl("4. Cookie");
            Util.sopl("5. Cookie");
            Util.sopl("6. Cookie");
